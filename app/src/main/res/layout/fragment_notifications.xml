<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">


    <EditText
        android:id="@+id/Recepttur"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="30dp"
        android:hint="Где будем жить"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Turname"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:hint="На чём поедем"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityENG_txt" />

    <EditText
        android:id="@+id/cityENG_txt"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:hint="Куда поедем"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Recepttur" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addButton2"
        android:layout_width="309dp"
        android:layout_height="39dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="408dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/custom_button"
        android:text="delete last tur"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#00FFFFFF"
        android:textColorHint="#000000"
        android:textColorLink="#00FFFFFF"
        app:backgroundTint="@android:color/holo_orange_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Recepttur" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addButton"
        android:layout_width="326dp"
        android:layout_height="49dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/custom_button"
        android:onClick="onMyButtonClick"
        android:text="add tur"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#00FFFFFF"
        android:textColorHint="#000000"
        android:textColorLink="#00FFFFFF"
        app:backgroundTint="@android:color/holo_orange_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Recepttur" />

</androidx.constraintlayout.widget.ConstraintLayout>